<div class="row">
  <div class="col-lg-12">
    <h1>Detalhes dos Produtos:</h1><br>
    <%= link_to "Editar", edit_produto_path(@produto),  class:"btn btn-primary" %> 
    <%= link_to "Voltar", produtos_path,  class:"btn btn-primary" %>
   

    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nome:</b></td>
          <td><%= @produto.nome %></td>
        </tr>   
        <tr>
          <td><b>Descrição:</b></td>
          <td><%= @produto.descricao %></td>
        </tr>
        <tr>
          <td><b>Valor:</b></td>
          <td><%= @produto.valor %></td>
        </tr>   
      </table>
    </div>
  </div>
</div>
<%= button_to "Deletar", @produto, method: :delete,  class:"btn btn-danger" %>

