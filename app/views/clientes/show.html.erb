<div class="row">
  <div class="col-lg-12">
    <h1>Detalhes dos Clientes:</h1><br>
    <%= link_to "Editar", edit_cliente_path(@cliente), class:"btn btn-primary" %>
    <%= link_to "Voltar", clientes_path, class:"btn btn-primary" %>
   

    <div class="card">
      <table class="table">
        <tr>
          <td><b>Nome:</b></td>
          <td><%= @cliente.nome %></td>
        </tr>   
        <tr>
          <td><b>Descrição:</b></td>
          <td><%= @cliente.dataNascimento %></td>
        </tr>
         
      </table>
    </div>
  </div>
</div>
<%= button_to "Deletar", @cliente, method: :delete, class:"btn btn-danger" %>

